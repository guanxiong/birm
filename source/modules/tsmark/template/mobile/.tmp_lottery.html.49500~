<script type="text/javascript">
    //预加载抽奖效果中用到的图片，使效果流畅。
    var images = new Array()
    function preload() {
        for (i = 0; i < preload.arguments.length; i++) {
            images[i] = new Image()
            images[i].src = preload.arguments[i]
        }
    }
    preload(
        'source/modules/dqq/template/images/burst.png',
        'source/modules/dqq/template/images/bow.png',
        'source/modules/dqq/template/images/red2.png',
        'source/modules/dqq/template/images/blue2.png',
        'source/modules/dqq/template/images/green2.png',
        'source/modules/dqq/template/images/orange2.png',
        'source/modules/dqq/template/images/yellow2.png'
    );
</script>

