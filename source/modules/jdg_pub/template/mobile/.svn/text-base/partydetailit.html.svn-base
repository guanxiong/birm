	    function countdown(days, hours, minutes, object) {
	        var interval = setInterval(function () {
	            var el = $(object);
	            if (minutes == 0) {
	                if (hours == 0) {
	                    if (days == 0) {
	                        el.text("0天0小时0分");
	                        location.reload();
	                        return;
	                    } else {
	                        days--;
	                        hours = 23;
	                        minutes = 59;
	                    }
	                } else {
	                    hours--;
	                    minutes = 59;
	                }
	            } else {
	                minutes--;
	            }
	            el.text(days + "天" + hours + "小时" + minutes + "分");
	        }, 60000);
	    }

	    $("span.count-down").each(function (e) {
	        var timeString = $(this).text().replace(/[ ]/g, "");

